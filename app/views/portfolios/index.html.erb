<p id="notice"><%= notice %></p>

<h1>Listing Portfolios</h1>
<% if policy(Portfolio.new).create? %>
 <%= link_to "New Portfolio", new_portfolio_path, class: 'btn btn-success' %>
 <% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
      
        <td><%= portfolio.name %></td>
        <td><%= portfolio.user_id %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </h4>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
